# Build stage
FROM node:20-bullseye AS build
WORKDIR /app
COPY . .
RUN yarn install
RUN yarn build
# Final stage
FROM node:20-bullseye-slim
ARG PORT
ENV PORT=$PORT

ARG LGS_DOMAIN_HOST
ARG LGS_DOMAIN_PORT
ENV LGS_DOMAIN_HOST=$LGS_DOMAIN_HOST
ENV LGS_DOMAIN_PORT=$LGS_DOMAIN_PORT

ARG MES_DOMAIN_HOST
ARG MES_DOMAIN_PORT
ENV MES_DOMAIN_HOST=$MES_DOMAIN_HOST
ENV MES_DOMAIN_PORT=$MES_DOMAIN_PORT

ARG AUTH_DOMAIN_HOST
ARG AUTH_DOMAIN_PORT
ENV AUTH_DOMAIN_HOST=$AUTH_DOMAIN_HOST
ENV AUTH_DOMAIN_PORT=$AUTH_DOMAIN_PORT

ENV TZ Asia/Ho_Chi_Minh
WORKDIR /app
COPY --from=build /app .
ENV NODE_ENV=production
EXPOSE $PORT
CMD ["yarn", "start"]
